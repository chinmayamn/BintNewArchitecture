                            <div class="card-body box-profile">
                                <span class="badge badge-success">Verified</span>
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="@_userManager.GetUserAsync(User).Result.ProfilePicture"
                                         alt="User profile picture">
                                </div>
                                <h3 class="profile-username text-center">@_userManager.GetUserAsync(User).Result.Firstname @_userManager.GetUserAsync(User).Result.Lastname</h3>
                                <p class="text-muted text-center">ID : I0002</p>


                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->

                        <div class="card card-warning card-outline  ">
                            <div class="card-header">
                                <h1 class="card-title">BGC Token</h1>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body box-profile">
