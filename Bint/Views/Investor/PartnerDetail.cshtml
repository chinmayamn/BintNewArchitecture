                                                    <label for="inputEmail3" class="col-sm-3 col-form-label">Bank name</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" class="form-control" id="txtbankname" placeholder="Bank name">
                                                    </div>
                                                </div>
