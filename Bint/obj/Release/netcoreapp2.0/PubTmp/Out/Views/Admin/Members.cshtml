@model Bint.Models.CustomerUserCreate
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="wrapper">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header" style="padding-bottom:0px !important">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">

                        @await Html.PartialAsync("_Quickuser", Model.reg)

                        <a href="/Account/Register" class="btn btn-secondary">Create User</a>

                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/Admin/dashboard"><i class="fas fa-home mr-2"></i>Home</a></li>
                            <li class="breadcrumb-item active">@ViewBag.U users</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">

                    <div class="card">

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>User Id</th>
                                        <th>Pic</th>
                                        <th>Email</th>
                                        <th>Firstname</th>
                                        <th>Lastname</th>
                                        <th>Mobile</th>
                                        <th>Status</th>   <th>Created On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.appUser)
                                    {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td> <img class="img-circle elevation-2 userimagesmall" alt="User Image" id="img3" src="@item.Profilepicture"></td>
                                        <td>@item.Email</td>
                                        <td>
                                            @item.Firstname
                                        </td>
                                        <td>@item.Lastname</td>
                                        <td>@item.Mobile</td>
                                        <td>@(item.LockoutEnd == null ? "Active" : "Locked")</td>
                                        <td>@item.Created_on</td>
                                        <td>
                                           
                                            <form asp-action="deleteuser" method="post" asp-route-id=@item.Id>
                                                <a class="btn btn-info btn-sm" href="/admin/userprofile/@item.Id" title="Edit">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <button type="submit" class="btn btn-danger btn-sm" title="Delete" id="btnDeleteUser_@item.Id">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                                @*<tfoot>
                                    <tr>
                                        <th>User Id</th>
                                        <th>Pic</th>
                                        <th>Email</th>
                                        <th>Firstname</th>
                                        <th>Lastname</th>
                                        <th>Mobile</th>
                                        <th>Status</th>
                                        <th>Created On</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
            </div>
        </section>
    </div>
</div>

<script>$(function () {
    $("#example1").DataTable({
        "order": [[0, "desc"]]
    });

    $("[id^=btnDeleteUser_]").click(function (event) {
        if (confirm('Do you want to delete user ?')) {
            return true;
        }
        else {
            return false; event.preventDefault();
        }
    });
});

 
</script>